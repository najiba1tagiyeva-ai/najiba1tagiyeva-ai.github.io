{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "CO₂ vs GDP with carbon intensity (Azerbaijan, 1990–2024).",
  "autosize": { "type": "fit", "contains": "padding" },
  "width": "container",
  "height": 420,

  "data": {
    "url": "https://raw.githubusercontent.com/najiba1tagiyeva-ai/najiba1tagiyeva-ai.github.io/refs/heads/main/Project_Chart2_Azerbaijan's_annual-co2-emissions-per-country.csv",
    "format": { "type": "csv" }
  },

  "title": {
    "text": "The Carbon Cost of Growth: CO₂ Emissions vs GDP",
    "subtitle": "Circle color shows carbon intensity (CO₂ per million USD). Click legend to filter.",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#111827",
    "subtitleFontSize": 11,
    "subtitleColor": "#6b7280",
    "subtitleFontStyle": "italic"
  },

  "transform": [
    { "calculate": "toNumber(datum['Year'])", "as": "year" },
    { "calculate": "toNumber(datum['GDP (constant 2015 US$)'])", "as": "gdp" },
    { "calculate": "toNumber(datum['Annual CO₂ emissions'])", "as": "co2" },
    { "calculate": "datum.gdp / 1e9", "as": "gdpB" },
    { "calculate": "datum.co2 / 1e6", "as": "co2M" },
    { "calculate": "(datum.co2 / datum.gdp) * 1000", "as": "carbonIntensity" },
    {
      "calculate": "datum.carbonIntensity >= 2 ? 'High' : datum.carbonIntensity <= 1 ? 'Low' : 'Medium'",
      "as": "intensityCategory"
    }
  ],

  "layer": [
    {
      "description": "Regression trend line",
      "transform": [
        {
          "regression": "co2M",
          "on": "gdpB",
          "as": ["gdp_reg", "co2_pred"]
        }
      ],
      "mark": {
        "type": "line",
        "strokeDash": [8, 4],
        "stroke": "#94a3b8",
        "strokeWidth": 2
      },
      "encoding": {
        "x": { "field": "gdp_reg", "type": "quantitative" },
        "y": { "field": "co2_pred", "type": "quantitative" }
      }
    },

    {
      "description": "Scatter points",
      "params": [
        {
          "name": "hover",
          "select": { "type": "point", "fields": ["year"], "on": "mouseover", "clear": "mouseout" }
        },
        {
          "name": "selectCat",
          "select": { "type": "point", "fields": ["intensityCategory"] },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "point",
        "filled": true,
        "stroke": "#ffffff",
        "strokeWidth": 1.5
      },
      "encoding": {
        "x": {
          "field": "gdpB",
          "type": "quantitative",
          "title": "GDP (billion USD, constant 2015)"
        },
        "y": {
          "field": "co2M",
          "type": "quantitative",
          "title": "Annual CO₂ emissions (million tonnes)"
        },
        "color": {
          "field": "intensityCategory",
          "type": "nominal",
          "title": "Carbon intensity",
          "scale": {
            "domain": ["High", "Medium", "Low"],
            "range": ["#ef4444", "#f59e0b", "#10b981"]
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "columns": 3,
            "titleFontSize": 11,
            "labelFontSize": 10
          }
        },
        "size": {
          "condition": { "param": "hover", "value": 220 },
          "value": 150
        },
        "opacity": {
          "condition": [
            { "param": "hover", "value": 1 },
            { "param": "selectCat", "value": 0.9 }
          ],
          "value": 0.25
        },

        "tooltip": [
          { "field": "year", "type": "quantitative", "title": "Year" },
          { "field": "gdpB", "type": "quantitative", "title": "GDP ($B)", "format": ".1f" },
          { "field": "co2M", "type": "quantitative", "title": "CO₂ (M tonnes)", "format": ".1f" },
          {
            "field": "carbonIntensity",
            "type": "quantitative",
            "title": "Carbon intensity (t CO₂ / M$)",
            "format": ".2f"
          },
          {
            "field": "intensityCategory",
            "type": "nominal",
            "title": "Category"
          }
        ]
      }
    },

    {
      "description": "Small annotation",
      "data": {
        "values": [
          { "x": 50, "y": 36, "text": "Trend line (regression)" }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontStyle": "italic",
        "color": "#64748b",
        "align": "left"
      },
      "encoding": {
        "x": { "field": "x", "type": "quantitative" },
        "y": { "field": "y", "type": "quantitative" },
        "text": { "field": "text" }
      }
    }
  ],

  "config": {
    "view": { "strokeWidth": 0 },
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 12,
      "gridOpacity": 0.15
    },
    "legend": {
      "labelFontSize": 10,
      "titleFontSize": 11
    }
  }
}
