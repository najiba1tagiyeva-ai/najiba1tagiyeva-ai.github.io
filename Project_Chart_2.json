{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "CO₂ vs GDP with carbon intensity categories (Azerbaijan, 1990–2024).",

  "autosize": { "type": "fit", "contains": "padding" },
  "width": "container",
  "height": 420,

  "data": {
    "url": "https://raw.githubusercontent.com/najiba1tagiyeva-ai/najiba1tagiyeva-ai.github.io/refs/heads/main/Project_Chart2_Azerbaijan's_annual-co2-emissions-per-country.csv",
    "format": { "type": "csv" }
  },

  "title": {
    "text": "The Carbon Cost of Growth: CO₂ Emissions vs GDP",
    "subtitle": "Circle color shows carbon intensity (tonnes CO₂ per million USD); dashed line shows regression trend.",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#111827",
    "subtitleFontSize": 11,
    "subtitleColor": "#6b7280",
    "subtitleFontStyle": "italic"
  },

  "transform": [
    { "calculate": "toNumber(datum['Year'])", "as": "year" },
    { "calculate": "toNumber(datum['GDP (constant 2015 US$)'])", "as": "gdp" },
    { "calculate": "toNumber(datum['Annual CO₂ emissions'])", "as": "co2" },
    { "calculate": "datum.gdp / 1e9", "as": "gdpB" },
    { "calculate": "datum.co2 / 1e6", "as": "co2M" },
    {
      "calculate": "(datum.co2 / datum.gdp) * 1000",
      "as": "carbonIntensity"
    },
    {
      "calculate": "datum.carbonIntensity >= 2 ? 'High' : datum.carbonIntensity <= 1 ? 'Low' : 'Medium'",
      "as": "intensityCategory"
    }
  ],

  "layer": [
    {
      "description": "Regression trend line",
      "transform": [
        {
          "regression": "co2M",
          "on": "gdpB",
          "as": ["gdpB_reg", "co2M_pred"]
        }
      ],
      "mark": {
        "type": "line",
        "strokeDash": [8, 4],
        "stroke": "#94a3b8",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "gdpB_reg",
          "type": "quantitative",
          "scale": { "domain": [0, 70] }
        },
        "y": {
          "field": "co2M_pred",
          "type": "quantitative",
          "scale": { "domain": [25, 60] }
        }
      }
    },

    {
      "description": "Scatter points with intensity color",
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["year"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        },
        {
          "name": "selectCat",
          "select": {
            "type": "point",
            "fields": ["intensityCategory"]
          },
          "bind": "legend"
        }
      ],
      "mark": {
        "type": "point",
        "filled": true,
        "stroke": "#ffffff",
        "strokeWidth": 1.5
      },
      "encoding": {
        "x": {
          "field": "gdpB",
          "type": "quantitative",
          "title": "GDP (billion USD, constant 2015)",
          "scale": { "domain": [0, 70] },
          "axis": {
            "grid": true,
            "gridOpacity": 0.2,
            "tickCount": 8,
            "labelFontSize": 11,
            "titleFontSize": 12
          }
        },
        "y": {
          "field": "co2M",
          "type": "quantitative",
          "title": "CO₂ Emissions (million tonnes)",
          "scale": { "domain": [25, 60] },
          "axis": {
            "grid": true,
            "gridOpacity": 0.2,
            "tickCount": 8,
            "labelFontSize": 11,
            "titleFontSize": 12
          }
        },
        "color": {
          "field": "intensityCategory",
          "type": "nominal",
          "title": "Carbon Intensity (CO₂ per million USD)",
          "scale": {
            "domain": ["High", "Medium", "Low"],
            "range": ["#ef4444", "#f59e0b", "#10b981"]
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "columns": 3,
            "titleFontSize": 11,
            "labelFontSize": 10,
            "padding": 5
          }
        },
        "size": {
          "condition": { "param": "hover", "empty": false, "value": 220 },
          "value": 150
        },
        "opacity": {
          "condition": [
            { "param": "hover", "empty": false, "value": 1 },
            { "param": "selectCat", "empty": false, "value": 0.9 }
          ],
          "value": 0.25
        },
        "tooltip": [
          { "field": "year", "type": "quantitative", "title": "Year" },
          {
            "field": "gdpB",
            "type": "quantitative",
            "title": "GDP ($B)",
            "format": ".1f"
          },
          {
            "field": "co2M",
            "type": "quantitative",
            "title": "CO₂ (M tonnes)",
            "format": ".1f"
          },
          {
            "field": "carbonIntensity",
            "type": "quantitative",
            "title": "Carbon intensity (t CO₂ per M$)",
            "format": ".2f"
          },
          {
            "field": "intensityCategory",
            "type": "nominal",
            "title": "Intensity bucket"
          }
        ]
      }
    },

    {
      "description": "Small explanatory text inside chart",
      "data": {
        "values": [
          {
            "x": 6,
            "y": 59.2,
            "text": "Circle color represents carbon intensity; hover or use legend to focus on a category."
          },
          {
            "x": 52,
            "y": 36,
            "text": "Trend line (regression)"
          }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontStyle": "italic",
        "color": "#64748b",
        "align": "left"
      },
      "encoding": {
        "x": { "field": "x", "type": "quantitative" },
        "y": { "field": "y", "type": "quantitative" },
        "text": { "field": "text", "type": "nominal" }
      }
    }
  ],

  "config": {
    "view": { "strokeWidth": 0 },
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 12,
      "titleFontWeight": "normal",
      "labelColor": "#4b5563",
      "titleColor": "#111827",
      "domainColor": "#d1d5db",
      "tickColor": "#d1d5db",
      "gridColor": "#e5e7eb"
    },
    "legend": {
      "labelFontSize": 10,
      "titleFontSize": 11,
      "titleColor": "#111827",
      "labelColor": "#4b5563"
    },
    "title": {
      "font": "system-ui, -apple-system, sans-serif",
      "fontWeight": "bold"
    },
    "background": "#ffffff"
  }
}
