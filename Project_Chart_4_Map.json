{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 900,
  "height": 600,
  "background": "#ffffff",
  "padding": 20,
  "title": {
    "text": "Renewable Energy Projects in Azerbaijan",
    "subtitle": [
      "Source: Azerbaijan Renewable Energy Agency under the Ministry of Energy"
    ],
    "fontSize": 22,
    "subtitleFontSize": 13,
    "anchor": "start",
    "color": "#1e293b",
    "subtitleColor": "#64748b",
    "offset": 20
  },
  "projection": {"type": "mercator", "center": [47.5, 40.4], "scale": 5500},
  "data": {
    "url": "https://raw.githubusercontent.com/najiba1tagiyeva-ai/najiba1tagiyeva-ai.github.io/refs/heads/main/Project_map_renewables_with_coords-for_map_new.csv"
  },
  "transform": [
    {"calculate": "trim(datum.Region)", "as": "Region_clean"},
    {"calculate": "toNumber(datum.CapacityMW)", "as": "Capacity_numeric"},
    {"filter": "isValid(datum.Capacity_numeric) && datum.Capacity_numeric > 0"},
    {
      "aggregate": [
        {"op": "sum", "field": "Capacity_numeric", "as": "total_capacity"},
        {"op": "count", "as": "project_count"}
      ],
      "groupby": ["Region_clean"]
    },
    {"calculate": "datum.total_capacity + ' MW'", "as": "capacity_formatted"},
    {
      "calculate": "datum.project_count + (datum.project_count === 1 ? ' project' : ' projects')",
      "as": "projects_formatted"
    },
    {
      "calculate": "{'Baku': 'Bakı', 'Jabrayil': 'Cəbrayıl', 'Bilasuvar': 'Biləsuvar', 'Neftchala': 'Neftçala', 'Absheron': 'Abşeron', 'Gobustan': 'Qobustan', 'Garadagh': 'Qaradağ', 'Fuzuli': 'Füzuli', 'Mingachevir': 'Mingəçevir', 'Shamkir': 'Şəmkir', 'Tartar': 'Tərtər', 'Nakhchivan': 'Naxçıvan', 'Yevlakh': 'Yevlax', 'Lachin': 'Laçın', 'Imishli': 'İmişli', 'Goychay': 'Göyçay', 'Goygol': 'Göygöl', 'Ismayilli': 'İsmayıllı', 'Balakan': 'Balakən', 'Oghuz': 'Oğuz', 'Shaki': 'Şəki', 'Gusar': 'Qusar', 'Khizi': 'Xızı', 'Shabran': 'Şabran', 'Sumgayit': 'Sumqayıt', 'Karabakh': 'Qarabağ', 'Lachin/Kalbajar': 'Laçın/Kəlbəcər', 'Zangilan': 'Zəngilan', 'Kalbajar': 'Kəlbəcər', 'Aghdara': 'Ağdərə'}[datum.Region_clean] || datum.Region_clean",
      "as": "Region_map"
    },
    {
      "lookup": "Region_map",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/najiba1tagiyeva-ai/najiba1tagiyeva-ai.github.io/refs/heads/main/az.topojson",
          "format": {"type": "topojson", "feature": "az"}
        },
        "key": "properties.name"
      },
      "as": "geo"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/najiba1tagiyeva-ai/najiba1tagiyeva-ai.github.io/refs/heads/main/az.topojson",
        "format": {"type": "topojson", "feature": "az"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e8e8e8",
        "stroke": "white",
        "strokeWidth": 1.5
      }
    },
    {
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "total_capacity",
          "type": "quantitative",
          "title": "Total Capacity (MW)",
          "scale": {"scheme": "teals", "domain": [0, 600], "type": "sqrt"},
          "legend": {
            "orient": "bottom-right",
            "titleFontSize": 13,
            "labelFontSize": 11,
            "direction": "horizontal",
            "gradientLength": 200,
            "gradientThickness": 15
          }
        },
        "tooltip": [
          {"field": "Region_clean", "type": "nominal", "title": "Region"},
          {
            "field": "capacity_formatted",
            "type": "nominal",
            "title": "Capacity"
          },
          {
            "field": "projects_formatted",
            "type": "nominal",
            "title": "Projects"
          }
        ]
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}
